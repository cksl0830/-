n,k=map(int,input().split())
arr=[0]+list(map(int,input().split()))
dp=[[0]*(k+1) for _ in range(n+1)]

for i in range(1,n+1):
    if arr[i]%2==0: #짝수일 떼 
        for j in range(k+1):
            dp[i][j]=dp[i-1][j]+1    
    else: # 홀수일 때 
        for j in range(1,k+1):
            dp[i][j]=dp[i-1][j-1]
    
result = []
for i in dp:
    result.append(i[k])

print(max(result))
 
    
    
    
